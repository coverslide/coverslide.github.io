  script.
    (function () {
      // just a silly canvas draw, want to do something more fun with this
      var global = {};
      var point = { x: 0, y: 0, dx: 0, dy: 0, ddx: 0, ddy: 0 };
      
      function init () {
        global.bg = document.getElementById('bg');
        global.aspect = window.innerHeight / window.innerWidth;
        global.canvas = document.createElement('canvas');
        global.canvas.width = window.innerWidth;
        global.canvas.height = window.innerHeight;
        global.bg.appendChild(global.canvas);
        global.lastTicks = 0;
        global.x = 0;
        global.y = 0;

        global.x = global.canvas.width / 2;
        global.y = global.canvas.height / 2;
        point.x = global.x;
        point.y = global.y;

        window.addEventListener('mousemove', function (event) {
          var context = global.canvas.getContext('2d');
          global.x = event.pageX;
          global.y = event.pageY;
          context.arc(event.screenX, event.screenY, 20, 0, 2 * Math.PI)
        });
      }

      function render (ticks) {
        var delta = ticks - global.lastTicks;
        global.lastTicks = ticks;
        var context = global.canvas.getContext('2d');
        context.strokeStyle = 'rgba(255, 255, 255, .05)';
        context.lineCap = 'butt';
        context.lineWidth = Math.abs(point.dx + point.dy) / 2;
        context.beginPath();
        context.moveTo(point.x, point.y);
        var damp = .5;
        var tightness = 5;
        //  F = -k(|x|-d)(x/|x|) - bv
        var distx = (global.x - point.x) - point.dx;
        var disty = (global.y - point.y) - point.dy;
        point.ddx = (distx) / 20;
        point.ddy = (disty) / 20;
        point.dx += point.ddx;
        point.dy += point.ddy ;
        point.x += point.dx;
        point.y += point.dy;
        context.lineTo(point.x, point.y);
        context.stroke();
        requestAnimationFrame(render);
      }

      init();
      render(0);

      window.onresize = function () {
        global.canvas.width = window.innerWidth;
        global.canvas.height = window.innerHeight; 
      }
    })();
